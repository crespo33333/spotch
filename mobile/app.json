{
  "expo": {
    "name": "Spotch",
    "slug": "spotch",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#ffffff"
    },
    "android": {
      "package": "com.spotch.app",
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyCGaeG60-Fe-g9grrH7GJ290Nqq6UFrDMo"
        }
      },
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE"
      ]
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.spotch.app",
      "config": {},
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSLocationWhenInUseUsageDescription": "Spotch needs your location to find nearby spots and award points.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Spotch needs your location to find nearby spots and award points."
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-notifications",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static",
            "modularHeaders": true
          }
        }
      ],
      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "merchant.com.spotch.app",
          "enableGooglePay": true
        }
      ]
    ],
    "scheme": "spotch",
    "extra": {
      "router": {},
      "eas": {
        "projectId": "407aeb71-808c-4a83-ab5e-d0507191f1b7"
      }
    }
  }
}